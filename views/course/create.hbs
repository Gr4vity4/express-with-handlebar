<section class="section" style="min-height: calc(100vh - 400px)">
    <div class="container">

        <div class="columns is-centered">
            <div class="column is-half">

                <nav class="breadcrumb" aria-label="breadcrumbs">
                    <ul>
                        <li><a href="/courses-manage">จัดการคอร์เรียน</a></li>
                        <li class="is-active"><a href="#">สร้างคอร์สเรียน</a></li>
                    </ul>
                </nav>

                <h1 class="title">สร้างคอร์สเรียน</h1>

                <form action="/courses-manage/create" method="post">
                    <div class="field">
                        <label for="">ชื่อคอร์สเรียน</label>
                        <p class="control">
                            <input class="input" type="text" name="title" placeholder="e.g. ML Basic" value="" required>
                        </p>
                    </div>
                    <div class="field">
                        <label for="">คำอธิบายคอร์ส</label>
                        <p class="control">
                            <textarea class="textarea" name="description" id=""
                                placeholder="Say something about this course ..." cols="30" rows="5"></textarea>
                        </p>
                    </div>
                    <div class="field">
                        <label for="">ราคา</label>
                        <p class="control">
                            <input class="input" type="number" name="price" placeholder="e.g. 8888" value="" required>
                        </p>
                    </div>
                    <div class="field">
                        <label for="">ผู้สอน</label>
                        <p class="control">
                            <input class="input" type="text" name="author" placeholder="e.g. Mr.Robert" value=""
                                required>
                        </p>
                    </div>
                    <div class="columns is-centered">
                        <div class="column is-half is-offset-one-quarter">
                            <button class="button is-success is-rounded" style="margin-top: 15px">
                                <i class="fas fa-plus"></i>
                                &nbsp;เพิ่มคอร์สเรียน
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>