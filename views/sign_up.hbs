<section class="section" style="min-height: calc(100vh - 400px)">
    <div class="container">

        <div class="columns is-centered">
            <div class="column is-half">
                <h1 class="title">ลงทะเบียน</h1>

                <form action="/sign-up" method="post">
                    <div class="columns" style="margin-bottom: 0">
                        <div class="column">
                            <div class="field">
                                <label for="">ชื่อ</label>
                                <p class="control has-icons-left has-icons-right">
                                    <input class="input" type="text" name="first_name" placeholder="ชื่อ"
                                        value="{{form.firstName}}" required>
                                    <span class="icon is-small is-left">
                                        <i class="fas fa-user"></i>
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div class="column">
                            <div class="field">
                                <label for="">นามสกุล</label>
                                <p class="control has-icons-left has-icons-right">
                                    <input class="input" type="text" name="last_name" placeholder="นามสกุล"
                                        value="{{form.lastName}}" required>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <label for="">อีเมล</label>
                        <p class="control has-icons-left has-icons-right">
                            <input class="input" type="email" name="email" placeholder="อีเมล" value="{{form.email}}"
                                required>
                            <span class="icon is-small is-left">
                                <i class="fas fa-envelope"></i>
                            </span>
                        </p>
                    </div>
                    <div class="field">
                        <label for="">รหัสผ่าน <span class="has-text-danger">{{ errors.password }}</span></label>
                        <p class="control has-icons-left">
                            <input class="input" type="password" name="password" placeholder="รหัสผ่าน" minlength="6"
                                required>
                            <span class="icon is-small is-left">
                                <i class="fas fa-lock"></i>
                            </span>
                        </p>
                    </div>
                    <div class="field">
                        <label for="">ยืนยันรหัสผ่าน</label>
                        <p class="control has-icons-left">
                            <input class="input" type="password" minlength="6" name="password_confirmation"
                                placeholder="ยืนยันรหัสผ่าน" required>
                            <span class="icon is-small is-left">
                                <i class="fas fa-lock"></i>
                            </span>
                        </p>
                    </div>
                    <div class="columns is-centered">
                        <div class="column is-half is-offset-one-quarter">
                            <button class="button is-success is-rounded" style="margin-top: 15px">
                                <i class="fas fa-check"></i>
                                &nbsp;ลงทะเบียน
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>