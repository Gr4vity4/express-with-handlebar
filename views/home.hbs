<section class="section">
    <div class="container">
        <h1 class="title">คอร์สมาใหม่</h1>

        <div class="columns" style="overflow: auto">

            {{#each courses}}
            <div class="column is-3">
                <div class="card">
                    <div class="card-image">
                        <a href="/course/{{urlLowerCase title}}">
                            <figure class="image is-4by3">
                                <img src="{{image}}" alt="{{title}}" style="object-fit: contain;">
                            </figure>
                        </a>
                    </div>
                    <div class="card-content">
                        <div class="media">
                            <div class="media-left">
                                <figure class="image is-48x48">
                                    <img src="{{author_image}}" alt="author" style="width: 100%">
                                </figure>
                            </div>
                            <div class="media-content">
                                <a href="/course/{{urlLowerCase title}}">
                                    <p class="title is-4">{{title}}</p>
                                </a>
                                <p class="subtitle is-6">@{{author}}</p>
                            </div>
                        </div>

                        <div class="content">
                            <p>{{description}}</p>
                            <a>@Machine Learning</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>

    </div>
</section>

