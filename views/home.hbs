<section class="section">
    <div class="container">
        <h1 class="title">คอร์สมาใหม่</h1>

        <div class="columns">

            {{#each courses}}
            <div class="column">
                <div class="card">
                    <div class="card-image">
                        <a href="/course/1">
                            <figure class="image is-4by3">
                                <img src="https://storage.googleapis.com/io-19-assets/images/global/io-social-banner.png"
                                    alt="Placeholder image" style="object-fit: contain;">
                            </figure>
                        </a>
                    </div>
                    <div class="card-content">
                        <div class="media">
                            <div class="media-left">
                                <figure class="image is-48x48">
                                    <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                                </figure>
                            </div>
                            <div class="media-content">
                                <a href="/course/1">
                                    <p class="title is-4">{{title}}</p>
                                </a>
                            </div>
                        </div>

                        <div class="content">
                            <p>{{description}}</p>
                            <a>@Machine Learning</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>

    </div>
</section>

