<section class="section" style="min-height: calc(100vh - 400px)">
    <div class="container">

        <div class="columns is-centered">
            <div class="column is-half">
                <h1 class="title">เข้าสู่ระบบ</h1>

                <form action="/sign-in" method="post">
                    <div class="field">
                        <label for="">อีเมล</label>
                        <p class="control has-icons-left has-icons-right">
                            <input class="input" type="email" name="email" placeholder="อีเมล" value="{{form.email}}"
                                required>
                            <span class="icon is-small is-left">
                                <i class="fas fa-envelope"></i>
                            </span>
                        </p>
                    </div>
                    <div class="field">
                        <label for="">รหัสผ่าน <span class="has-text-danger">{{ errors.password }}</span></label>
                        <p class="control has-icons-left">
                            <input class="input" type="password" name="password" placeholder="รหัสผ่าน" required>
                            <span class="icon is-small is-left">
                                <i class="fas fa-lock"></i>
                            </span>
                        </p>
                    </div>
                    <div class="columns is-centered">
                        <div class="column is-half is-offset-one-quarter">
                            <button class="button is-success is-rounded" style="margin-top: 15px">
                                <i class="fas fa-sign-in-alt"></i>
                                &nbsp;เข้าสู่ระบบ
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>